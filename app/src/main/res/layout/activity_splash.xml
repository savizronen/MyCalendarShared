<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    tools:context=".activities.ActivitySplash">

    <ImageView
        android:id="@+id/splash_IMG_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/app_icon_calendar"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/splash_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_IMG_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/architects_daughter"
        android:text="My Shared Calendar"
        android:textColor="#ffffff"
        android:textSize="35dp"
        android:textStyle="bold" />

</RelativeLayout>